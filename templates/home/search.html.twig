{% extends 'base.html.twig' %}

{% block title %}Nos Chambres{% endblock %}

{% block body %}

   <!-- Breadcrumb Section Begin -->
    <div class="breadcrumb-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-text">
                        <h2>Les Chambres libres dans l'intevale demandé</h2>
                        <div class="bt-option">
                            <a href="{{ path('app_home') }}">Accueil</a>
                            <span>Resultats de recherche</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Breadcrumb Section End -->

    <!-- Rooms Section Begin -->
    <section class="rooms-section spad">
        <div class="container">
            <div class="row">

            {% if chambres %}
                {% for chambre in chambres %}
                <div class="col-lg-4 col-md-6">
                    <div class="room-item">
                        <img src="{{ asset('img/room/'~ chambre.image) }}" alt="">
                        <div class="ri-text">
                            <h4>{{ chambre.titre | capitalize }}</h4>
                            <h3>{{ chambre.prix  | format_number({fraction_digit: 2}) }}€<span> /Par nuit</span></h3>
                            <table>
                                <tbody>
                                    <tr>
                                        <td class="r-o">Catégorie:</td>
                                        <td>{{ chambre.categorie | capitalize }}</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Services:</td>
                                        <td>Wifi, Television, Bathroom,...</td>
                                    </tr>
                                    <tr>
                                        <td class="r-o">Description:</td>
                                        <td>{{ chambre.descriptionCourt | capitalize }}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <a href="{{ path('chambre_details' , {'id' : chambre.id}) }}" class="primary-btn">Voir le Details</a>
                        </div>
                    </div>
                </div>

                {% endfor %} 
            {% endif %}


                <div class="col-lg-12">
                    <div class="room-pagination">
                        <a href="#">1</a>
                        <a href="#">2</a>
                        <a href="#">Next <i class="fa fa-long-arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Rooms Section End -->


{% endblock %}
